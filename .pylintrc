[MASTER]
load-plugins = pylint.extensions.check_elif

[MESSAGES CONTROL]
disable =
    bad-continuation,
    fixme,
    invalid-name,
    superfluous-parens,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,

[BASIC]
no-docstring-rgx = .*

[REPORTS]
reports = no
score = no
msg-template = {path}:{line}: {C}: {symbol} [{obj}] {msg}

[SIMILARITIES]
min-similarity-lines = 8

[FORMAT]
max-line-length = 140
expected-line-ending-format = LF

